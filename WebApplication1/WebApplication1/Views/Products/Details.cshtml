@model Products

@{
    ViewData["Title"] = "Details";
}


<h1 class="h1 p-4">Details @Model.ProductName Product</h1>

    <div class="form-group">
    <label asp-for="ProductName"></label>
    <input readonly asp-for="ProductName" class="form-control">
    </div>
    <div class="form-group">
    <label asp-for="ProductImage"></label>
    <input readonly class="form-control" asp-for="ProductImage">

    </div>

    <div class="form-group">
    <label asp-for="ProductDescription"></label>
    <input readonly class="form-control" asp-for="ProductDescription">

    </div>

<a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-outline-success"> Edit Page </a>
