@model Products

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.ProductName Product</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control">
        <span class="form-text text-danger" asp-validation-for="ProductName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProductImage"></label>
        <input class="form-control" asp-for="ProductImage">
        <span class="form-text text-danger" asp-validation-for="ProductImage"></span>

    </div>

    <div class="form-group">
        <label asp-for="ProductDescription"></label>
        <input class="form-control" asp-for="ProductDescription">
        <span class="form-text text-danger" asp-validation-for="ProductDescription"></span>

    </div>

    <button type="submit" class="btn btn-primary">Submit Edit </button>
    <a type="button" class="btn btn-outline-info" asp-action="Index">Back To List</a>

</form>