@model IEnumerable<Products>
@{
    ViewData["Title"] = "Index";
}

<h1 class="h1 p-4 ">Products</h1>
<br />

<a class="btn btn-success m-4" role="button" asp-action="Create">Create Products</a>


<br />
@if (Model.Count() > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">@Html.DisplayNameFor(D=>D.ProductName)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.ProductImage)</th>
                <th scope="col">@Html.DisplayNameFor(D=>D.ProductDescription)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var products in Model)
            {
                <tr>
                    <th scope="row">@products.ProductName</th>
                    <td><img src="@products.ProductImage" class="img-fluid" alt=""></td>
                    <td>@products.ProductDescription</td>
                    <td><a asp-action="Details" asp-route-id="@products.id"><i class="fas fa-eye"></i></a></td>
                    <td><a asp-action="Edit" asp-route-id="@products.id"><i class="fas fa-edit"></i></a></td>
                    <td><a asp-action="Delete" asp-route-id="@products.id"><i class="fas fa-trash-alt text-danger"></i></a></td>

                </tr>
            }
        </tbody>
    </table>


}
else
{
    <div class="alert alert-warning" role="alert">
        there is no Products
    </div>
}


